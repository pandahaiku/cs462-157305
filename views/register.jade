extends layout

block content
	header
		container(id="branding")
				img(src="images/SPLogo2.png")
				nav
					ul  
						li
							a(href='/')
								|  Login
	div.container
		div.row
		br 
		br
		br
		form(class="signup-login", action='/signup', method='POST')
				h1(class="signup-login-title") SIGN UP
				input(type='text', name='username', class="signup-login-input" , placeholder= "Choose a username",required, autofocus)
				input(type='password', name='password', class="signup-login-input"  placeholder="Choose a password", required)
				input(type='email', name='email', class="signup-login-input" , placeholder="enter your email",required)
				input(type="submit" value="Sign me up!" class="signup-login-button")
				span.clearfix
				#message
					if message
						h1.text-center.error-message #{message}